/* pages/mySend/mySend.wxss */
page{
  font-size:30rpx;
  background:#f2f2f2;
  font-family: "冬青黑体",Arial, Helvetica, sans-serif;
  letter-spacing: 2rpx;
  padding-top: 10px;
}
/*标题lan开始  */

#navgationBar {
  font-size: 18px;
  /* font-weight: bold; */
  /* transform: translateY(50%); */
  display: flex;
  /* flex-direction: column-reverse; */
  justify-content: center;
  align-items: flex-end;
  box-sizing: border-box;
   padding-bottom: 15rpx; 
  /* padding-left:40rpx; */
}
.img{
   position:absolute;
   z-index: 2;
   transform: translateY(60%); 
}

.user_message{
  position: relative;
  width:100%;
  height:12%;
  /* background: purple; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user_message_choose{
  position: absolute;
  top: 0;
  right: 0;
  margin: auto;
  height: 33px;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* width: 40%; */
}
.user_message_choose .icon-wrap{
  height: 100%;
  text-align: center;
  line-height: 200%;
}
.user_message_choose .icon-wrap .icon{
  width: 20px;
  background: #f2f2f2;
  border-radius: 3px;
  font-size:12px;
  color:#ccc;
  padding:3px 8px;
}
.user_message_choose .select-wrap{
  flex: 1;
  overflow: hidden;
  margin-right: 20rpx;
}
.user_message_choose .select{
  display: flex;
  background:rgba(0,0,0,.7);
  border-radius: 4px;
  padding: 8px 0;
  width: 100px;
  text-align: center;
  overflow: hidden;
  transition: .3s;
  transform: translate(110px);
}
.user_message_choose .select-show{
  transform: translate(0);
}
.user_message_choose .select-btn{
  display: inline-block;
  flex:1;
  font-size: 14px;
  color: #fff;
}
.user_message_choose .select-btn:first-child{
  border-right: 1px solid #555;
}
.user_message image{
  width:82rpx;
  height:82rpx;
  float:left;
  margin-left:10px;
  border-radius: 50%;
}
.user_message .name{
  margin-left:10px;
  float: left;
}
.content{
  width:100%;
  height:auto;
  /* background: green; */
}
.content_text{
  margin: 30rpx 0;
}
.content_text text{
  word-break: break-all;
}
.address{
  margin:20rpx 0rpx;
  font-size: 24rpx;
  color: #808080;
}
.address .icon{
  font-size: 24rpx;
  color: #808080;
  margin-right: 3px;
}
.others{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.others1{
  display: flex;
  align-items: center;
  padding:5rpx 30rpx;
  font-size: 24rpx;
  color: #808080;
}
.others1:first-child{
  padding-left: 0rpx;
}
.others1 .icon{
  display: inline-block;
  font-size: 24rpx;
  margin-right:10rpx;
}

.active-color{
  color: #f56f4b;
}

.like-wrap{
  display: inline-block;
  margin-right:1px;
}
.like-wrap .icon{
  transition: .2s;
}
.like-active{
  transform: scale(1.2);
}

.images {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.images .img_single {
  width: 300rpx;
  margin: 5px 0;
}

.images .img_more {
  flex: 31% 0;
  margin: 8rpx;
  height: 220rpx;
}
