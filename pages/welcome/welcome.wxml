<!-- 内容开始 -->
<view id='box' hidden="{{isAuthorize}}" style='width:100%;height:auto;' >
  <view style='width:100%;height:auto;' wx:if="{{!phone_flag}}">
    <view class='search'>
      <icon class="weui-icon-search" type="search" size="14" ></icon>
      <input name="search" placeholder='请输入完整的城市名称' placeholder-style='font-size:28rpx' class='searchInput' bindinput='inputValue' bindconfirm='blur' bindfocus='focus'></input>
    </view>
    <view class='locationAuto'>
      <view class='title'>当前定位的城市</view>
      <view class="item list" bindtap='click2' data-value="{{city}}">{{city}}</view>
      <view class="item list" bindtap='clear'>重新定位</view>
    </view>
    <block wx:for="{{cityData}}" wx:key="{{index}}">
      <view class='chooseone'>
        <view class='title'>{{item.name}}</view>
        <view class="for">
          <view class='item' wx:for="{{item.childList}}" bindtap='click' wx:for-item="child_item" wx:for-key="child_index" wx:key="{{index}}" data-value="{{child_item.name}}" data-id="{{child_item.id}}">{{child_item.name}}</view>
        </view>
      </view>
    </block>
  </view>
  <!-- <view wx:if="{{phone_flag}}" style='position:fixed;top:50%;left:0;transformY(-50%);width:100%;height:100rpx;'>
    <button open-type="getPhoneNumber" style="width:90%;margin:0 5%;" bindgetphonenumber="getPhoneNumber">获取手机号</button>
  </view> -->
</view>
  <!-- 授权获取基本信息 -->
  <authorize is-authorize="{{isAuthorize}}" bindmyevent="getUserInfo"></authorize>

<!-- 内容结束 -->