/* pages/main/main.wxss */

page {
  font-size: 30rpx;
  font-family: "冬青黑体", Noto, Arial, Helvetica, sans-serif;
  color: #0e0e0e;
  background: #f0f0f0;
  letter-spacing: 2rpx;
}

/*容器开始  */

.search {
  padding: 20rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.search__select {
  margin-right: 10px;
  background: #fff;
}

.search__select .text {
  width: 120rpx;
  display: inline-block;
  font-size: 28rpx;
}

.search__select .icon {
  font-size: 24rpx;
}

.search__input {
  flex: 1;
  padding: 10rpx 0;
  background: #f0f0f0;
  border-radius: 25px;
  overflow: hidden;
}

.search__input input {
  width: 90%;
  margin: 0 auto;
  background: #f0f0f0;
}

/*轮播图开始  */

.swiper {
  padding: 0 15rpx;
  background: white;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/*轮播图结束  */

/*栏目开始  */

.service {
  background: white;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background: white;
}

.service_item {
  width: 20%;
  height: 50%;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-wrap: wrap;
  /* background: red; */
  margin: 20rpx 0;
}

.service_item image {
  width: 82rpx;
  height: 82rpx;
  margin-bottom: 10rpx;
}

.service_item text {
  font-size: 24rpx;
  color: #888;
}

/*栏目结束  */

/*广告栏开始  */

.ad {
  padding: 20rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  background: white;
}

.ad_text {
  flex: 6;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-left: 20rpx;
}

.ad_text text {
  width: 600rpx;
  height: 50%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*广告栏结束 */

/*朋友圈开始  */

.curcle {
  padding: 0 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  background: white;
}

.curcle.flexd {
  position: fixed;
  top: 0;
  left: 0;
}

.curcle view {
  padding: 30rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}

.on {
  color: #f56f4b;
  border-bottom: 5rpx solid #f56f4b;
}

.off {
  color: #888;
  border-bottom: 5rpx solid #fff;
}

/*朋友圈结束  */

/* 信息流 */

.menssage-item {
  width: 100%;
  margin-bottom: 20rpx;
  background: white;
  padding: 40rpx 20rpx 0;
  box-sizing: border-box;
}

.menssage-item .user {
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.menssage-item .user image {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}

.menssage-item .user .user__info {
  margin-left: 10px;
}

.menssage-item .user .user__info .name {
  font-size: 28rpx;
  color: #090909;
}

.menssage-item .user .user__info .time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #757575;
}

.menssage-item .content {
  margin: 30rpx 0 20rpx;
}

.menssage-item .content .text {
  font-size: 28rpx;
}

.menssage-item .content .text .tag {
  font-size: 30rpx;
  color: #7399d8;
}

.menssage-item .content .images {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.menssage-item .address {
  margin: 20rpx 0rpx;
  font-size: 24rpx;
  color: #808080;
}

.menssage-item .others {
  display: flex;
  align-items: center;
}

.menssage-item .others .list {
  margin-right: 10px;
  color: #808080;
}

.menssage-item .others .list .icon {
  font-size: 24rpx;
}

.menssage-item .others .list .i-color {
  color: #f84a12;
}

.i-liulanliang, .i-pinglun {
  font-size: 20rpx !important;
}

.menssage-item .others .list .num {
  margin-left: 5px;
  font-size: 24rpx;
}

