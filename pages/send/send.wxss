.form {
  padding: 20rpx;
  margin-top:20rpx;
  font-size:30rpx;
  background:#f2f2f2;
}
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:90%;
  height:80rpx;
  
  margin:0 5%;
  
  border-bottom:2rpx solid #f2f2f2;
}

.form-item .form-item__label{
  flex: 160rpx 0 0;
}
.form-item .form-item__input{
  flex: 1;
  text-align:right;
}