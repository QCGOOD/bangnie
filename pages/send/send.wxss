/*发布页面开始  */
.place{
  position:absolute;
  top:0;left:0;
}
.btn{
  width:80%;
  height:87rpx;
  background: #f8794d;
  border-radius: 87rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color:white;
  margin-top:41rpx;
  margin-bottom:50rpx;
  /* font-size:28rpx; */
}
