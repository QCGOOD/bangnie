/**app.wxss**/
@import 'iconfont.wxss';


.ellipsis{
  display:block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 信息流 */
/* page {
  height: 100%;
} */
.menssage-item {
  width: 100%;
  margin-bottom: 20rpx;
  background: white;
  padding: 40rpx 20rpx 0;
  box-sizing: border-box;
}

.menssage-item:last-child {
  margin: 0;
}

.user-wrap {
  position: relative;
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.user-wrap image:not(.vip-img) {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}

.vip-img{
  position: absolute;
  bottom: -7rpx;
  left: 55rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%；
}

.user-wrap .user__info {
  margin-left: 10px;
}

.user-wrap .user__info .name {
  font-size: 28rpx;
  color: #090909;
}
.user-wrap .user__info .admin {
  color: #f84a12;
}

.user-wrap .user__info .time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #757575;
}

.menssage-item .content {
  margin: 30rpx 0 20rpx;
}

.menssage-item .content .text {
  font-size: 28rpx;
}

.menssage-item .content .text .tag {
  font-size: 28rpx;
  color: #7399d8;
}

.menssage-item .content .images {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.menssage-item .content .images .img_single {
  width: 300rpx;
  margin: 5px 0;
}

.menssage-item .content .images .img_more {
  flex: 31% 0;
  margin: 8rpx;
  height: 220rpx;
}

.menssage-item .address {
  margin: 20rpx 0rpx;
  font-size: 24rpx;
  color: #808080;
}

.menssage-item .icon {
  font-size: 26rpx;
}

.menssage-item .others {
  display: flex;
  align-items: center;
}

.menssage-item .others .list {
  margin-right: 40rpx;
  width: 100rpx;
  color: #808080;
}

.menssage-item .others .list .icon {
  display: inline-block;
  font-size: 24rpx;
  transition: .3s;
}

.menssage-item .others .list .i-color {
  color: #f84a12;
}
.menssage-item .others .list .like-active {
  transform: scale(1.2);
}

.i-liulanliang, .i-pinglun {
  font-size: 20rpx !important;
}

.menssage-item .others .list .num {
  margin-left: 5px;
  font-size: 24rpx;
}

/* 信息流 */
.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}
