/**app.wxss**/
@import 'iconfont.wxss';

/* 信息流 */

.menssage-item {
  width: 100%;
  margin-bottom: 20rpx;
  background: white;
  padding: 40rpx 20rpx 0;
  box-sizing: border-box;
}

.user-wrap {
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.user-wrap image {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}

.user-wrap .user__info {
  margin-left: 10px;
}

.user-wrap .user__info .name {
  font-size: 28rpx;
  color: #090909;
}

.user-wrap .user__info .time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #757575;
}

.menssage-item .content {
  margin: 30rpx 0 20rpx;
}

.menssage-item .content .text {
  font-size: 28rpx;
}

.menssage-item .content .text .tag {
  font-size: 28rpx;
  color: #7399d8;
}

.menssage-item .content .images {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.menssage-item .content .images .img_single {
  width: 222rpx;
  margin: 5px 2px;
  height: 222rpx;
}

.menssage-item .content .images .img_more {
  width: 300rpx;
  margin: 5px 2px;
  height: 300rpx;
}

.menssage-item .address {
  margin: 20rpx 0rpx;
  font-size: 24rpx;
  color: #808080;
}

.menssage-item .icon {
  font-size: 26rpx;
}

.menssage-item .others {
  display: flex;
  align-items: center;
}

.menssage-item .others .list {
  margin-right: 80rpx;
  color: #808080;
}

.menssage-item .others .list .icon {
  font-size: 24rpx;
}

.menssage-item .others .list .i-color {
  color: #f84a12;
}

.i-liulanliang, .i-pinglun {
  font-size: 20rpx !important;
}

.menssage-item .others .list .num {
  margin-left: 5px;
  font-size: 24rpx;
}

/* 信息流 */
